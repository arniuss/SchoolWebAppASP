@using SchoolWebApp.DTO

@model IEnumerable<SubjectDTO>
<h1>List of Subjects</h1>
<a class="btn btn-primary my-2" asp-action="Create">Create new subject</a>
@foreach(var subject in Model) {
	<div class="border border-dark">
		<h5>@subject.Name</h5>
		<p>@subject.Id</p>
		<a class="btn btn-warning" asp-action="Edit" asp-route-id="@subject.Id">Edit</a>
		<form method="post">
			<button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@subject.Id">Delete</button>
		</form>
	</div>
}